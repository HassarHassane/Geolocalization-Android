<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:paddingBottom="20dp"
    >

    <ImageView
        android:id="@+id/photo"
        android:layout_width="71dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/friends" />

    <TextView
        android:id="@+id/nom_complet2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"/>


    <TextView
        android:id="@+id/num_tel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/nom_complet2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="101dp"
        android:layout_marginLeft="101dp"
        android:layout_marginTop="19dp"
        android:text="TextView"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"/>

    <Button
        android:id="@+id/bloquer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/photo"
        android:layout_alignEnd="@+id/num_tel2"
        android:layout_alignRight="@+id/num_tel2"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="-115dp"
        android:layout_marginRight="-115dp"
        android:layout_toEndOf="@+id/num_tel2"
        android:layout_toRightOf="@+id/num_tel2"
        android:background="#A303A9F4"
        android:text="@string/bloquer"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/id_contact2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:visibility="invisible"
        android:gravity="center_horizontal" />


</RelativeLayout>